{% extends 'base.html.twig' %}

{% block title %}Hola ProfesorController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hola {{ controller_profesores }}! âœ…</h1>

		This friendly message is coming from:

		<ul>
			<li>Your controller at <code>/var/www/html/UPO/src/Controller/ProfesoresController.php</code></li>
			<li>Your template at <code>/var/www/html/UPO/templates/profesores/index.html.twig</code></li>	
		</ul>
		</div>

        <section class="container mt-5">

            <h2>Listado de Profesores</h2>
 
            <table class="table table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>Nif</th>
                        <th>Nombre</th>
                        <th>Genero</th>
                    </tr>
                </thead>
                <tbody>

                {% for profesor in profesores %}
                    <tr>
                        <td>{{ profesor.nif }}</td>
                        <td>{{ profesor.nombre }}</td>
                        <td>{{ profesor.genero "Masculino" : "Femenino"}}</td>
                        
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No hay profesores disponibles.</td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </section>
	{% endblock %}
